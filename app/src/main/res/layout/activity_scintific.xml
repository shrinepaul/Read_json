<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ScintificActivity">

    <TextView
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:textColor="#FA232324"
            android:textStyle="italic"
            android:textSize="50dp"
            android:background="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
        />
    <!--<TextView
            android:id="@+id/text1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="#FA232324"
            android:textStyle="italic"
            android:textSize="50dp"
            android:background="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>-->

    <Button
            android:id="@+id/btn_deg"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/btn_selector"
            android:minHeight="80dp"
            android:text="deg"
            android:textColor="#CCCCFF"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/text"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:id="@+id/btn_sin"
            android:layout_width="89dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/btn2_selector"
            android:minHeight="80dp"
            android:text="sin"
            app:layout_constraintBottom_toBottomOf="@id/btn_deg"
            app:layout_constraintStart_toEndOf="@id/btn_deg"/>
    <Button
            android:id="@+id/btn_cos"
            android:layout_width="89dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/btn2_selector"
            android:minHeight="80dp"
            android:text="cos"
            app:layout_constraintBottom_toBottomOf="@id/btn_sin"
            app:layout_constraintStart_toEndOf="@id/btn_sin"/>
    <Button
            android:id="@+id/btn_tan"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/btn2_selector"
            android:minHeight="80dp"
            android:text="tan"
            app:layout_constraintBottom_toBottomOf="@id/btn_cos"
            app:layout_constraintStart_toEndOf="@id/btn_cos"/>
    <Button
            android:id="@+id/btn_root"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/btn2_selector"
            android:minHeight="80dp"
            android:text="√"
            android:textColor="#DB3A0C"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_deg"
            app:layout_constraintEnd_toStartOf="@id/btn_7"/>
    <Button
            android:id="@+id/btn_7"
            android:layout_width="89dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/btn3_selector"
            android:minHeight="80dp"
            app:fontFamily="@font/jsmath_bbold10"
            android:text="7"
            android:textColor="#1E2020"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/btn_root"
            app:layout_constraintStart_toEndOf="@+id/btn_root"/>
    <Button
            android:id="@+id/btn_8"
            android:layout_width="89dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/btn3_selector"
            android:minHeight="80dp"
            app:fontFamily="@font/jsmath_bbold10"
            android:text="8"
            android:textColor="#2A2C2C"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/btn_7"
            app:layout_constraintStart_toEndOf="@+id/btn_7"/>
    <Button
            android:id="@+id/btn_9"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/btn3_selector"
            android:minHeight="80dp"
            app:fontFamily="@font/jsmath_bbold10"
            android:text="9"
            android:textColor="#303333"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/btn_8"
            app:layout_constraintStart_toEndOf="@+id/btn_8"/>
    <Button
            android:id="@+id/btn_log"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/btn2_selector"
            android:minHeight="80dp"
            android:text="lg"
            android:textColor="#DB3A0C"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/btn_root"
            app:layout_constraintEnd_toStartOf="@id/btn_4"/>
    <Button
            android:id="@+id/btn_4"
            android:layout_width="89dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/btn3_selector"
            android:minHeight="80dp"
            app:fontFamily="@font/jsmath_bbold10"
            android:text="4"
            android:textColor="#2B302F"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/btn_log"
            app:layout_constraintStart_toEndOf="@id/btn_log"/>
    <Button
            android:id="@+id/btn_5"
            android:layout_width="89dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/btn3_selector"
            android:minHeight="80dp"
            app:fontFamily="@font/jsmath_bbold10"
            android:text="5"
            android:textColor="#262C2B"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/btn_4"
            app:layout_constraintStart_toEndOf="@+id/btn_4"/>
    <Button
            android:id="@+id/btn_6"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/btn3_selector"
            android:minHeight="80dp"
            app:fontFamily="@font/jsmath_bbold10"
            android:text="6"
            android:textColor="#2D3332"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/btn_5"
            app:layout_constraintStart_toEndOf="@+id/btn_5"/>
    <Button
            android:id="@+id/btn_parentheses1"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/btn2_selector"
            android:minHeight="80dp"
            android:text="( "
            android:textColor="#DB3A0C"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/btn_log"
            app:layout_constraintEnd_toStartOf="@+id/btn_1"/>
    <Button
            android:id="@+id/btn_1"
            android:layout_width="89dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/btn3_selector"
            android:minHeight="80dp"
            app:fontFamily="@font/jsmath_bbold10"
            android:text="1"
            android:textColor="#343838"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/btn_parentheses1"
            app:layout_constraintStart_toEndOf="@id/btn_parentheses1"/>
    <Button
            android:id="@+id/btn_2"
            android:layout_width="89dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/btn3_selector"
            android:minHeight="80dp"
            app:fontFamily="@font/jsmath_bbold10"
            android:text="2"
            android:textColor="#2A302F"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/btn_1"
            app:layout_constraintStart_toEndOf="@+id/btn_1"/>
    <Button
            android:id="@+id/btn_3"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/btn3_selector"
            android:minHeight="80dp"
            app:fontFamily="@font/jsmath_bbold10"
            android:text="3"
            android:textColor="#2D3332"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/btn_2"
            app:layout_constraintStart_toEndOf="@+id/btn_2"/>
    <Button
            android:id="@+id/btn_closeparentheses"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/btn2_selector"
            android:minHeight="80dp"
            android:text=")"
            android:textColor="#DB3A0C"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/btn_parentheses1"
            app:layout_constraintEnd_toStartOf="@+id/btn_pi"/>

    <Button
            android:id="@+id/btn_pi"
            android:layout_width="89dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/btn3_selector"
            android:minHeight="80dp"
            android:text="π"
            app:layout_constraintTop_toTopOf="@id/btn_closeparentheses"
            app:layout_constraintStart_toEndOf="@+id/btn_closeparentheses" />
    <Button
            android:id="@+id/btn_0"
            android:layout_width="89dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/btn3_selector"
            android:minHeight="80dp"
            app:fontFamily="@font/jsmath_bbold10"
            android:text="0"
            android:textColor="#1F2222"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/btn_pi"
            app:layout_constraintStart_toEndOf="@id/btn_pi"/>
    <Button
            android:id="@+id/btn_point"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/btn3_selector"
            android:minHeight="80dp"
            app:fontFamily="@font/jsmath_bbold10"
            android:text="."
            android:textColor="#313A39"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/btn_0"
            app:layout_constraintStart_toEndOf="@+id/btn_0"/>
    <Button
            android:id="@+id/btn_in"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/btn2_selector"
            android:minHeight="80dp"
            android:text="in"
            android:textColor="#DB3A0C"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/btn_closeparentheses"
            app:layout_constraintEnd_toStartOf="@id/btn_add"/>
    <Button
            android:id="@+id/btn_add"
            android:layout_width="89dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/btn2_selector"
            android:minHeight="80dp"
            android:text="+"
            android:textColor="#DB3A0C"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/btn_in"
            app:layout_constraintStart_toEndOf="@id/btn_in"/>

    <Button
            android:id="@+id/btn_sub"
            android:layout_width="89dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/btn2_selector"
            android:minHeight="80dp"
            android:text="-"
            android:textColor="#DB3A0C"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/btn_add"
            app:layout_constraintStart_toEndOf="@+id/btn_add"/>

    <Button
            android:id="@+id/btn_multiplication"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/btn2_selector"
            android:minHeight="80dp"
            android:text="*"
            android:textColor="#DB3A0C"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/btn_sub"
            app:layout_constraintStart_toEndOf="@+id/btn_sub"/>

    <ImageButton
            android:id="@+id/btn_swap"
            android:layout_width="87dp"
            android:layout_height="79dp"
            android:layout_weight="1"
            android:background="@drawable/btn3_selector"
            android:minHeight="80dp"
            android:src="@drawable/swap"
            android:textColor="#E91E63"
            app:layout_constraintTop_toBottomOf="@+id/btn_in"
            app:layout_constraintEnd_toStartOf="@+id/btn_div"/>
    <Button
            android:id="@+id/btn_div"
            android:layout_width="89dp"
            android:layout_height="79dp"
            android:layout_weight="1"
            android:background="@drawable/btn2_selector"
            android:minHeight="80dp"
            android:text="/"
            android:textColor="#DB3A0C"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/btn_swap"
            app:layout_constraintStart_toEndOf="@id/btn_swap"/>
    <Button
            android:id="@+id/btn_equal"
            android:layout_width="89dp"
            android:layout_height="79dp"
            android:layout_weight="1"
            android:background="@drawable/btn_selector"
            android:minHeight="80dp"
            android:text="="
            android:textColor="#CCCCFF"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/btn_div"
            app:layout_constraintStart_toEndOf="@+id/btn_div"/>
<Button
        android:id="@+id/btn_AC"
        android:layout_width="95dp"
        android:layout_height="79dp"
        android:layout_weight="1"
        android:background="@drawable/btn2_pressed"
        android:minHeight="80dp"
        app:fontFamily="@font/jsmath_bbold10"
        android:text="Ac"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/btn_equal"
        app:layout_constraintStart_toEndOf="@id/btn_equal"/>



</androidx.constraintlayout.widget.ConstraintLayout>