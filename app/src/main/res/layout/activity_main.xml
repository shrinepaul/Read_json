<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light"
        tools:context=".MainActivity">

  <TextView
          android:id="@+id/text"
          android:layout_width="0dp"
          android:layout_height="167dp"
          android:textColor="#FA232324"
          android:textStyle="italic"
          android:textSize="50dp"
          android:background="@null"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintHorizontal_bias="1.0"
  />
  <TextView
          android:id="@+id/text4"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:textColor="#FA232324"
          android:textStyle="italic"
          android:textSize="50dp"
          android:background="@null"
          app:layout_constraintTop_toBottomOf="@id/text"
          app:layout_constraintStart_toStartOf="parent"
          />

  <TextView
          android:id="@+id/text3"
          android:layout_width="0dp"
          android:layout_height="90dp"
          android:textColor="#FA232324"
          android:textStyle="italic"
          android:textSize="50dp"
          android:background="@null"
          app:layout_constraintTop_toBottomOf="@id/text4"
          app:layout_constraintStart_toStartOf="parent"
          />





    <ImageButton
            android:id="@+id/btn_del"
            android:layout_width="88dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn_selector"
            android:minHeight="80dp"
            android:src="@drawable/backspace"
            app:layout_constraintTop_toBottomOf="@id/text3"
            app:layout_constraintStart_toStartOf="parent"/>


    <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn2_selector"
            android:minHeight="80dp"
            android:text="+"
            android:textColor="#DB3A0C"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/btn_del"
            app:layout_constraintStart_toEndOf="@id/btn_del"/>
    <Button
            android:id="@+id/btn_multiplication"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn2_selector"
            android:minHeight="80dp"
            android:text="*"
            android:textColor="#DB3A0C"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/btn_add"
            app:layout_constraintStart_toEndOf="@id/btn_add"/>

    <Button
            android:id="@+id/btn_div"
            android:layout_width="96dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn2_selector"
            android:minHeight="80dp"
            android:text="/"
            android:textColor="#DB3A0C"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/btn_multiplication"
            app:layout_constraintStart_toEndOf="@id/btn_multiplication"/>
    <Button
            android:id="@+id/btn_7"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn3_selector"
            android:minHeight="80dp"
            android:text="7"
            android:textColor="#1E2020"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/btn_del"
            app:layout_constraintEnd_toStartOf="@id/btn_8"/>
    <Button
            android:id="@+id/btn_8"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn3_selector"
            android:minHeight="80dp"
            android:text="8"
            android:textColor="#1E2020"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/btn_7"
            app:layout_constraintStart_toEndOf="@+id/btn_7"/>
    <Button
            android:id="@+id/btn_9"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn3_selector"
            android:minHeight="80dp"
            android:text="9"
            android:textColor="#1E2020"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/btn_8"
            app:layout_constraintStart_toEndOf="@+id/btn_8"/>
    <Button
            android:id="@+id/btn_4"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn3_selector"
            android:minHeight="80dp"
            android:text="4"
            android:textColor="#1E2020"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/btn_7"
            app:layout_constraintEnd_toStartOf="@id/btn_5"/>

    <Button
            android:id="@+id/btn_5"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn3_selector"
            android:minHeight="80dp"
            android:text="5"
            android:textColor="#1E2020"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/btn_4"
            app:layout_constraintStart_toEndOf="@+id/btn_4"/>

    <Button
            android:id="@+id/btn_6"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn3_selector"
            android:minHeight="80dp"
            android:text="6"
            android:textColor="#1E2020"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/btn_5"
            app:layout_constraintStart_toEndOf="@+id/btn_5"/>
    <Button
            android:id="@+id/btn_1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn3_selector"
            android:minHeight="80dp"
            android:text="1"
            android:textColor="#1E2020"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/btn_4"
            app:layout_constraintEnd_toStartOf="@id/btn_2"/>
    <Button
            android:id="@+id/btn_2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn3_selector"
            android:minHeight="80dp"
            android:text="2"
            android:textColor="#1E2020"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/btn_1"
            app:layout_constraintStart_toEndOf="@+id/btn_1"/>
    <Button
            android:id="@+id/btn_3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn3_selector"
            android:minHeight="80dp"
            android:text="3"
            android:textColor="#1E2020"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/btn_2"
            app:layout_constraintStart_toEndOf="@+id/btn_2"/>
    <Button
            android:id="@+id/btn_sub"
            android:layout_width="96dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn2_selector"
            android:minHeight="80dp"
            android:text="-"
            android:textColor="#DB3A0C"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/btn_9"
            app:layout_constraintStart_toEndOf="@+id/btn_9"/>

    <Button
            android:id="@+id/btn_AC"
            android:layout_width="96dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn2_selector"
            android:minHeight="80dp"
            android:text="AC"
            android:textColor="#DB3A0C"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/btn_6"
            app:layout_constraintStart_toEndOf="@+id/btn_6"/>
    <Button
            android:id="@+id/btn_0"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn3_selector"
            android:minHeight="80dp"
            android:text="0"
            android:textColor="#1E2020"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/btn_1"
            app:layout_constraintEnd_toStartOf="@id/btn_point"/>
    <Button
            android:id="@+id/btn_point"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn3_selector"
            android:minHeight="80dp"
            android:text="."
            android:textColor="#1152C9"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/btn_0"
            app:layout_constraintStart_toEndOf="@+id/btn_0"/>
  <Button
            android:id="@+id/btn_equal"
            android:layout_width="96dp"
            android:layout_height="102dp"
            android:layout_weight="1"
            android:background="@drawable/btn_selector"
            android:minHeight="80dp"
            android:text="="
            android:textColor="#CCCCFF"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/btn_3"
            app:layout_constraintStart_toEndOf="@+id/btn_3"/>


 <ImageButton
         android:id="@+id/btn_swap"
         android:layout_width="90dp"
         android:layout_height="52dp"
         android:layout_weight="1"
         android:background="@drawable/btn2_selector"
         android:minHeight="80dp"
         android:src="@drawable/swap"
         app:layout_constraintTop_toTopOf="@+id/btn_point"
         app:layout_constraintStart_toEndOf="@+id/btn_point"/>


</androidx.constraintlayout.widget.ConstraintLayout>

